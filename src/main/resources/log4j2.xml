<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout
                    pattern="%level{WARN=W, DEBUG=D, ERROR=E, TRACE=T, INFO=I} %d{HH:mm:ss.SSS} [%t] %logger{1} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger level="trace" additivity="true" name="com.crashbox"/>
        <Logger level="info" additivity="true" name="com.crashbox.mal.ai.EntityAIVassal"/>
        <Logger level="info"  additivity="true" name="com.crashbox.mal.chest.TileEntityBeaconChest"/>
        <Logger level="info" additivity="true" name="com.crashbox.mal.forester.TileEntityBeaconForester"/>
        <Logger level="info"  additivity="true" name="com.crashbox.mal.furnace.TileEntityBeaconFurnace"/>
        <Logger level="info"  additivity="true" name="com.crashbox.mal.quarry.TileEntityBeaconQuarry"/>
        <Logger level="info" additivity="true" name="com.crashbox.mal.task.TaskPair"/>
        <Logger level="info"  additivity="true" name="com.crashbox.mal.task.TaskMakeBigStair"/>
        <Logger level="info"  additivity="true" name="com.crashbox.mal.util.StairBuilder"/>
        <Logger level="info"  additivity="true" name="com.crashbox.mal.workbench.TileEntityBeaconWorkbench"/>
        <Root level="warn">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
