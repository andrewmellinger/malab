<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout
                    pattern="%level{WARN=W, DEBUG=D, ERROR=E, TRACE=T, INFO=I} %d{HH:mm:ss.SSS} [%t] %logger{1} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger level="trace" additivity="true" name="com.crashbox"/>
        <Logger level="debug"  additivity="true" name="com.crashbox.mal.ai.EntityAIWorkDroid"/>
        <Logger level="info"  additivity="true" name="com.crashbox.mal.chest.TileEntityAutoChest"/>
        <Logger level="debug"  additivity="true" name="com.crashbox.mal.forester.TileEntityAutoForester"/>
        <Logger level="info"  additivity="true" name="com.crashbox.mal.furnace.TileEntityAutoFurnace"/>
        <Logger level="info"  additivity="true" name="com.crashbox.mal.quarry.TileEntityAutoQuarry"/>
        <Logger level="info"  additivity="true" name="com.crashbox.mal.task"/>
        <Logger level="debug"  additivity="true" name="com.crashbox.mal.task.TaskPair"/>
        <Logger level="debug"  additivity="true" name="com.crashbox.mal.task.TaskMakeBigStair"/>
        <Logger level="info"  additivity="true" name="com.crashbox.mal.util.StairBuilder"/>
        <Logger level="info"  additivity="true" name="com.crashbox.mal.workbench.TileEntityAutoWorkbench"/>
        <Root level="warn">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
